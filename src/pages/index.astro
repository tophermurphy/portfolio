---
import Layout from "../layouts/Layout.astro";
import ThumbHome from "../components/ThumbHome.astro";
// Data imports
import lgbCw from "src/data/lgb-cw";
import h2oCw from "../data/h2o-cw";
import lagertown from "src/data/lagertown";
import h2oEmail from "src/data/h2o-email";
import CmLogo from "src/components/svgs/CmLogo.svg"
---

<Layout classes={["home"]}>
  <header class="home-header">
    <h1 class="home-title">Chris&nbsp;Murphy</h1>
    <div class="home-subhead">
      <div class="home-subtitle">
        <picture class="home-subtitle-logo"><CmLogo /></picture>
        <div class="home-subtitle-copy">
          <h2 class="home-subtitle-copy-1">visual&nbsp;designer</h2>
          <h3 class="home-subtitle-copy-2">UX &bull; UI &bull; Front-End</h3>
        </div>
      </div>
      <blockquote class="home-description">
        <p>
          A designer with a passion for visual storytelling &amp; the<br
            class="home-description-brk"
          /> tools to take a project from conception to completion.
        </p>
      </blockquote>
    </div>
  </header>
  <main id="work">
    <section class="project-thumbs-range">
      <ThumbHome data={lgbCw} />
      <ThumbHome data={h2oCw} />
      <ThumbHome data={lagertown} />
      <ThumbHome data={h2oEmail} />
    </section>
  </main>
</Layout>
