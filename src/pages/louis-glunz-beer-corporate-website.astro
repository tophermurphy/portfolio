---
import data from "src/data/lgb-cw";
import Layout from "src/layouts/PageLayout.astro";
import DynaImage from "src/components/DynaImage.astro";
import PageHeader from "src/components/PageHeader.astro";
import PageSectionStd from "src/components/PageSectionStd.astro";
import WorkNav from "src/components/WorkNav.astro";
import h2oCw from "src/data/h2o-cw";
import h2oEmail from "src/data/h2o-email";
---

<Layout title={data.title} classes={["page", data.id, `page-${data.id}`]}>
  <main class:list={["content content-page", `content-page-${data.id}`]}>
    <PageHeader data={data} />

    <article class:list={["page-article", `${data.id}-article`]}>
      <PageSectionStd
        data={data.content.section1}
        dataKey="section1"
        id={data.id}
        sectionClass="section-text-left"
      />
      <PageSectionStd
        data={data.content.section2}
        dataKey="section2"
        id={data.id}
        sectionClass="section-text-right"
      />

      <section class="page-section section-custom section-text-mixed section3">
        <div
          class="section-images section-custom-images section-images-section3-0"
        >
          <picture
            class:list={[
              "image-wrapper",
              `image-${data.id}`,
              "image-section3-0",
            ]}
          >
            {
              data.content.section3.images?.[0] && (
                <DynaImage data={data.content.section3.images?.[0]} />
              )
            }
          </picture>
          <picture
            class:list={[
              "image-wrapper",
              `image-${data.id}`,
              "image-section3-1",
            ]}
          >
            {
              data.content.section3.images?.[1] && (
                <DynaImage data={data.content.section3.images?.[1]} />
              )
            }
          </picture>
          <picture
            class:list={[
              "image-wrapper",
              `image-${data.id}`,
              "image-section3-2",
            ]}
          >
            {
              data.content.section3.images?.[2] && (
                <DynaImage data={data.content.section3.images?.[2]} />
              )
            }
          </picture>
        </div>
        <div class="section-copy section-custom-copy section3-copy-0">
          <h3 class="section-copy-header">{data.content.section3.header}</h3>
          <p class="section-copy-body">
            {data.content.section3.body?.[0] ?? ""}
          </p>
          <p class="section-copy-body md-show">
            {data.content.section3.body?.[1] ?? ""}
          </p>
        </div>
        <div
          class="section-images section-custom-images section-images-section3-1"
        >
          <picture
            class:list={[
              "image-wrapper",
              `image-${data.id}`,
              "image-section3-3",
            ]}
          >
            {
              data.content.section3.images?.[3] && (
                <DynaImage data={data.content.section3.images?.[3]} />
              )
            }
          </picture>
        </div>
        <div class="section-copy section-custom-copy section3-copy-1">
          <p class="section-copy-body section-copy-body-0">
            {data.content.section3.body?.[1] ?? ""}
          </p>
        </div>
      </section>

      <PageSectionStd
        dataKey="section4"
        sectionClass="section-text-right"
        id={data.id}
        data={data.content.section4}
      />

      <section class="page-section section-standard section5 section-text-left">
        <div
          class="section-images section-custom-images section-images-section5"
        >
          <picture
            class:list={[
              "image-wrapper",
              `image-${data.id}`,
              "image-section5-0",
            ]}
          >
            {
              data.content.section5.images?.[0] && (
                <DynaImage data={data.content.section5.images?.[0]} />
              )
            }
          </picture>
          <picture
            class:list={[
              "image-wrapper",
              `image-${data.id}`,
              "image-section5-1",
            ]}
          >
            {
              data.content.section5.images?.[1] && (
                <DynaImage data={data.content.section5.images?.[1]} />
              )
            }
          </picture>
          <div class="glunz-swatch-wrap">
            <div class="glunz-swatch glunz-swatch-sm glunz-swatch-0">
              <div class="glunz-swatch-color glunz-swatch-color-0">&nbsp;</div>
              <div class="glunz-swatch-text">#E7AA04</div>
            </div>
            <div class="glunz-swatch glunz-swatch-sm glunz-swatch-1">
              <div class="glunz-swatch-color glunz-swatch-color-1">&nbsp;</div>
              <div class="glunz-swatch-text">#8F2100</div>
            </div>
            <div class="glunz-swatch glunz-swatch-lg glunz-swatch-2">
              <div class="glunz-swatch-color glunz-swatch-color-2">&nbsp;</div>
              <div class="glunz-swatch-text">#E7AA04-#A3651F</div>
            </div>
            <div class="glunz-swatch glunz-swatch-sm glunz-swatch-3">
              <div class="glunz-swatch-color glunz-swatch-color-3">&nbsp;</div>
              <div class="glunz-swatch-text">#2A2E14</div>
            </div>
            <div class="glunz-swatch glunz-swatch-sm glunz-swatch-4">
              <div class="glunz-swatch-color glunz-swatch-color-4">&nbsp;</div>
              <div class="glunz-swatch-text">#645d54</div>
            </div>
            <div class="glunz-swatch glunz-swatch-lg glunz-swatch-5">
              <div class="glunz-swatch-color glunz-swatch-color-5">&nbsp;</div>
              <div class="glunz-swatch-text">#9E3400-#382929</div>
            </div>
          </div>
        </div>
        <div class="section-copy">
          <h3 class="section-copy-header">{data.content.section5.header}</h3>
          {
            data.content.section5.body &&
              data.content.section5.body.map((item, i) => (
                <p class:list={["section-copy-body", `section-copy-body-${i}`]}>
                  {item}
                </p>
              ))
          }
        </div>
      </section>

      <section
        class="page-section section-custom section-glunzsite-stats section6"
      >
        <div class="glunzsite-users glunzsite-stats">
          <h4>{data.content.section6.extra?.[0] ?? ''}</h4>
          <p>
            <span class="up-arrow-svg">
              <Fragment set:html={data.content.section6.svgs[0]} />
            </span>
            {data.content.section6.extra?.[1] ?? ""}
          </p>
        </div>
        <div class="glunzsite-sessions glunzsite-stats">
          <h4>{data.content.section6.extra?.[2] ?? ""}</h4>
          <p>
            <span class="up-arrow-svg">
              <Fragment set:html={data.content.section6.svgs[0]} />
            </span>
            {data.content.section6.extra?.[3] ?? ""}
          </p>
        </div>
        <div class="glunzsite-stat-copy section-copy">
          <p class="section-copy-body">
            {data.content.section6.body?.[0] ?? ""}
          </p>
        </div>
      </section>
    </article>
  </main>

  <WorkNav leftNav={h2oEmail} rightNav={h2oCw} /></Layout
>
