---
import type { PageData } from 'src/types/template';
import DynaImage from './DynaImage.astro';
interface Props {
    leftNav: PageData;
    rightNav: PageData;
}

const { leftNav, rightNav } = Astro.props;
---
<nav class="work-nav-container">

    <div class="work-nav work-nav-left">
        <a class="work-nav-link work-nav-link-left" href={`${leftNav.slug}.html`}>
        <figure class="work-nav-figure work-nav-figure-left ">
            <DynaImage data={leftNav.thumbnail} />
            <figcaption class="work-nav-caption work-nav-caption-left">
                <h2 class="work-nav-title work-nav-title-left">{leftNav.title}</h2>
                <h3 class="work-nav-subtitle ork-nav-subtitle-left">{leftNav.subtitle}</h3>
            </figcaption>
        </figure>
        </a>
    </div>

    <div class="work-nav work-nav-right">
        <a class="work-nav-link work-nav-link-right"  href={`${rightNav.slug}.html`}>
        <figure class="work-nav-figure work-nav-figure-right">
            <DynaImage data={rightNav.thumbnail} />
            <figcaption class="work-nav-caption work-nav-caption-right">
                <h2 class="work-nav-title work-nav-title-right">{rightNav.title}</h2>
                <h3 class="work-nav-subtitle work-nav-subtitle-right">{rightNav.subtitle}</h3>
            </figcaption>
        </figure>
        </a>
    </div>

</nav>